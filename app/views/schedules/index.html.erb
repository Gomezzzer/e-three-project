<div class="container mt-4">
  <div>
    <h1>My Schedule</h1>
    <%= link_to "New Schedule", new_schedule_path, class: "btn btn-success" %>
  </div>

  <div class="row mt-4 justify-content-center">
    <% current_user.trainer_schedules.each do |schedule| %>
      <div class="col-md-4 mb-4">
        <div class="card shadow-sm">
          <div class="card-body text-center three-e-card-body">
            <%= render schedule %>
            <p>
              <%= link_to "Update Schedule", edit_schedule_path(schedule), class: "btn btn-secondary btn-sm" %>
              <%= button_to "Delete Schedule", schedule, method: :delete, class: "btn btn-danger btn-sm" %>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
