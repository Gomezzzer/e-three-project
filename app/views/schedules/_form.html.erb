<%= form_with(model: schedule) do |form| %>
  <% if schedule.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(schedule.errors.count, "error") %> prohibited this schedule from being saved:</h2>

      <ul>
        <% schedule.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.hidden_field :trainer_id, value: current_user.id, style: "display: block" %>
  </div>

  <div>
    <%= form.hidden_field :duration, value: 60, style: "display: block" %>
  </div>

  <div>
    <%= form.label :day_of_week, style: "display: block" %>
    <%= form.select :day_of_week, options_for_select((0..6).map { |n| [Date::DAYNAMES[n], Date::DAYNAMES[n]]}) %>
  </div>

  <div>
    <%= form.label :start_time, style: "display: block" %>
    <%= form.select :start_time, options_for_select(availabilities)%>
  </div>

  <div>
    <%= form.label :end_time, style: "display: block" %>
    <%= form.select :end_time, options_for_select(availabilities)%>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
