<header class="header">
  <% if user_signed_in? %>
    <%= link_to "3E Fitness", bookings_path, class: "main-nav-link" %>
  <% else %>
    <h1 class="main-nav-logo">
      3E Fitness
    </h1>
  <% end%>

  <nav>
    <ul class="main-nav-list">
      <% if user_signed_in? %>
        <% if current_user.role == "clients" %>
          <li>
            <%= link_to bookings_path, class: "main-nav-link" do %>
              <i class="fa-regular fa-calendar-days"></i>
              Booking Sessions
            <% end %>
          </li>
        <% else %>
          <li>
            <%= link_to schedules_path, class: "main-nav-link" do %>
              <i class="fa-solid fa-clock"></i></i>
            Schedule
          <% end %>
        </li>
        <li>
          <%= link_to bookings_path, class: "main-nav-link" do %>
            <i class="fa-regular fa-calendar-days"></i>
            Booking Sessions
          <% end %>
        </li>
      <% end %>
      <li>
        <%= link_to edit_user_registration_path, class: "main-nav-link" do %>
          <i class="fa-solid fa-circle-user"></i>
          <%= current_user.first_name %> (<%= current_user.role == "clients" ? "Client" : "Trainer" %>)
        <% end %>
      </li>
      <li>
        <%= link_to destroy_user_session_path, data: { turbo_method: :delete }, class: "main-nav-link" do %>
          <i class="fa-solid fa-arrow-right-from-bracket"></i></i>
        Sign out
      <% end %>
    </li>
  <% else%>
    <li>
      <%= link_to "Sign in", new_user_session_path, class: "main-nav-link" %>
    </li>
    <li>
      <%= link_to "Sign up", new_user_registration_path, class: "main-nav-link" %>
    </li>
  <% end %>
</ul>
</nav>
</header>
