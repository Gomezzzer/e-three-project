<div class="container signup-container">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
      <div class="signup-form">
        <h2 class="text-center text-success mb-4">Sign up</h2>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form"}) do |f| %>
          <%= f.error_notification %>

          <div class="form-group mb-3">
            <%= f.input :first_name, label: "First Name", input_html: { class: 'form-control', autocomplete: "given-name" } %>
          </div>
          <div class="form-group mb-3">
            <%= f.input :last_name, label: "Last Name", input_html: { class: 'form-control', autocomplete: "family-name" } %>
          </div>
          <div class="form-group mb-3">
            <%= f.input :phone_number, label: "Phone Number", input_html: { class: 'form-control', autocomplete: "tel" } %>
          </div>
          <div class="form-group mb-3">
            <%= f.input :role, as: :select, collection: [["Client", :clients], ["Personal Trainer", :personal_trainers]], prompt: "Select role", label: "Role", input_html: { class: 'form-control' } %>
          </div>
          <div class="form-group mb-3">
            <%= f.input :email,
                label: "Email",
                autofocus: true,
                input_html: { class: "form-control", autocomplete: "email" }%>
          </div>
          <div class="form-group mb-3">
            <%= f.input :password,
                label: "Password",
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { class: "form-control", autocomplete: "new-password" } %>
          </div>
          <div class="form-group mb-3">
            <%= f.input :password_confirmation,
                label: "Confirm Password",
                input_html: { class: "form-control", autocomplete: "new-password" } %>
          </div>
          <%= f.button :submit, "Sign up", class: "btn btn-success btn-block" %>
        <% end %>
        <div class="mt-3">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
